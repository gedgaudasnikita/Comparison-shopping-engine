<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeLinearLayout">
    <TextView
        android:id="@+id/homeTextView"
        android:text="Home Screen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/homeRemoveImageTextView"
            android:text="âœ–"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4pt" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/homeImageView"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homeVLinearLayout"
        android:weightSum="4">
        <Button
            android:id="@+id/homeCameraButton"
            android:text="Camera"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <Button
            android:id="@+id/homeGalleryButton"
            android:text="Photo from Gallery"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>
    <Button
        android:id="@+id/homeResultScreenButton"
        android:text="Result Screen"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:clickable="true" />
    <Button
        android:id="@+id/homeConfigButton"
        android:text="Config"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:clickable="true" />
</LinearLayout>